<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mackey.helloGirl" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <name>HelloGirl</name>
    <description>
        An application to help introduce coding to young girls through a dress up doll.
    </description>
    <author email="sarahmackey@gmail.com" href="https://hellogirlforsugar.wordpress.com/">
        Hello Girl Team: Sarah Mackey, Alex Castelli, Joye Nettles, Alex Housand
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
